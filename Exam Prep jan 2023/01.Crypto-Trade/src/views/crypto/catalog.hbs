

    <main>
        <section class="crypto-market">
            <h1><span>Crypto</span> Trade</h1>
              {{#if cryptos}}
                {{#each cryptos}}
            <div class="offer-list">
                <div class="coin">
                    <div class="coin-img">
                        <img src="{{cryptoImage}}">
                    </div>
                     <div class="coin-info">
                        <h1>{{name}}</h1>
                        <p><span>Price: </span>${{price}}</p>
                        <p><span>Payment: </span>{{payment}}</p>
                    </div>

                    <a href="/cryptos/{{_id}}/details" class="btn-details">Details</a>
            </div>
                  {{/each}}


                </div>
           {{else}}
            <div class="no-offer">
                <p>There are no crypto offers found!</p>
            </div> 
            {{/if}}
                
        </section>
    </main>

   