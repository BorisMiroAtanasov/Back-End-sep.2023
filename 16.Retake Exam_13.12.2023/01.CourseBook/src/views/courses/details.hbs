

    <main>
        <div class="details-container">
            <div class="details-container-image">
                <img
                    src="https://wpvip.edutopia.org/wp-content/uploads/2022/10/johnson-169hero-effectivelearn-shutterstock_1.jpg?w=2880&quality=85">
            </div>
            <div class="details-container-info">
                <h2>Title: {{course.title}}</h2>
                <h3>Type: {{course.type}}</h3>
                <h3>Certificate: {{course.certificate}}</h3>
                <h3>Price: â‚¬{{course.price}}</h3>
                 
                <h3>By: {{ownerEmail}}</h3>
                
                <!--If there are sign up users-->
                {{#if singupBy}}
                {{!-- {{#each singupBy}} --}}
                <h4>Signed By: ???</h4>
                {{!-- {{/each }} --}}
                <!--If there are no sign up users-->
                 {{else}}
                <h4>Nobody has signed in for this course yet</h4>
                {{/if}}
            </div>
            <div class="details-container-content">
                <p>{{course.description}}</p>
            </div>
            <div class="btn-container">
                <!-- Only for registered user and creator of the course-->
                {{#if isOwner}}
                <a href="/courses/{{course._id}}/edit">Edit</a>
                <a href="/courses/{{course._id}}/delete">Delete</a>
                {{else}}
                {{#if isSignUp}}
                <!-- logged in user who has already sign up for the course-->
                <p class="sign-up">You've already signed up for this course!</p>
                {{else}}
                <!-- logged in user who has not yet sign up for the course-->
                <a href="/courses/{{course._id}}/signUp">Sign up</a>
                {{/if}}
                {{/if}}

            </div>
        </div>
    </main>

   