

        <section id="detailsPage">
            <div id="detailsInfo">
                <h1>Name: {{electronicDevice.name}}</h1>
                <div class="info"><img src="{{electronicDevice.image}}"></div>

                <div class="info">
                    <h3>Type: {{electronicDevice.type}}</h3>
                    <h3>Year of Production: {{electronicDevice.production}}</h3>
                    <h3>Years of Exploitation: {{electronicDevice.exploitation}}</h3>
                    <h3>Damages: {{electronicDevice.damages}}</h3>
                    <h3>Description: {{electronicDevice.description}}</h3>
                    <h2>Price: ${{electronicDevice.price}}</h2>
                  
                </div>
                <!--If there is user logged in-->
                {{#if isAutenticated}}
                <div class="buttons">

                    {{#if isOwner}}
                    <!--If user is owner-->
                    <a href="/posts/{{electronicDevice._id}}/edit" class="edit-btn">Edit</a>
                    <a href="/posts/{{electronicDevice._id}}/delete" class="delete-btn">Delete</a>
                    <!--If user is not owner of the toy post-->
                    {{else}}
                    <a href="#" class="buy-btn">Buy</a>
                   

                    <!--If user is not the owner and is bought this toy-->
                    <p><span class="buy">Thank You For Your Purchase</span></p>
                 {{/if }}
                </div>
                   {{/if}}
          

            </div>
        </section>

     